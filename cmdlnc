sudo apt install apache2
sudo ufw app list
sudo ufw allow apache
sudo systemctl start apache2
sudo install php[version]-cli
sudo apt isntall php[version]-fpm
sudo a2enconf php[version]-fpm (active la version php apache)
sudo a2disonf php[version]-fpm (desactive version php apache) 
sudo apt install phpmyadmin
sudo gedit /etc/apache2/apache2.conf
		-> Include /etc/phpmyadmin/apache.conf
sudo apt install isntall mysql-server
sudo systemctl start Mysql

sudo update-alternatives --config php (changer version php terminal)

